{% extends 'base.html.twig' %}

{% block title %}Comment index
{% endblock %}

{% block body %}

	<main class="container my-5">
		<h1>Comment index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Content</th>
					<th>DateTime</th>
					<th>TagUser</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for comment in comments %}
					<tr>
						<td>{{ comment.id }}</td>
						<td>{{ comment.content }}</td>
						<td>{{ comment.dateTime ? comment.dateTime|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ comment.tagUser }}</td>
						<td>
							<a href="{{ path('app_comment_show', {'id': comment.id}) }}">show</a>
							<a href="{{ path('app_comment_edit', {'id': comment.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>


	<a href="{{ path('app_comment_new') }}">Create new</a>
{% endblock %}

