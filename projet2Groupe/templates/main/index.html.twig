{% extends 'base.html.twig' %}

{% block title %}Ticket App
{% endblock %}

{% block body %}
	
	<div class="container my-3">
        <h1>Bienvenue sur BarbareTicket</h1>
	    <h2>Les derniers tickets</h2>
		<div class="row">
			<aside class="col-3 border border light bg-white p-2 rounded-start-4">

				{% for ticket in tickets %}
					<article class="card mb-3">
						<div class="card-header">{{ ticket.title }}</div>

						<div class="card-body">
                            <h6 class="card-subtitle mb-2 text-body-secondary"> {{ ticket.id}} </h6>
                            
						</div>
					</article>
				{% endfor %}

			</aside>
			{% block show %}
				<main class="col-9 border border-light bg-white p-2 rounded-end-4">
					<h2 class="text-black">Ticket séléctionné</h2>
				</main>
				{# <a href="{{ path('show-main.html.twig', {'id': ticket.id}) }}">Voir le ticket</a> #}
			{% endblock %}
		</div>
	</div>

{% endblock %}

